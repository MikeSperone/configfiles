## As I wouldn't want to just overwrite the entire .gitconfig file,
## I would want to, at some point, make a bash script to add these to 
## an existing .gitconfig file - via `git config --global user.name "John Doe"` like commands

[user]
    email = x@x.x
    name = Michael Sperone
[core]
    editor = /usr/bin/vim
[push]
    default = matching
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false
[alias]
    aliases = config --get-regexp ^alias\\.

    checkoukt = checkout
    checokut = checkout
    co = checkout
    stauts = status
    statsus = status

    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    stats = status
    graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    master = !git checkout master && git pull origin master
    logme = "!me=$(git config --get user.name); \
        git log $(--author \"$me\")"
